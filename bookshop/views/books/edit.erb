<form method="post" action="/books/<%= @book.id %>">

<table>

  <tr> 
   <td> 
    <label for="title-field">Title:</label>
    <input
     type="text"
     name="title"
     id="title_field"
     value="<%= @book.title %>"
    /> 
   </td>
  </tr>

  <tr> 
   <td> 
    <label for="author-field">Author:</label>
    <input
     type="text"
     name="author"
     id="author-field"
     value="<%= @book.author().author_full_name() %>"
    />
   </td>
  </tr> 

  <tr>
   <td> 
    <label for="quantity-field">Quantity:</label>
    <input
     type="number"
     name="quantity"
     id="quantity-field"
     value="<%= @book.quantity() %>"
     />
   </td>
  <tr>  
   
   <tr>
    <td> 
     <label for="buy-price-field">Buy Price:</label>
     <input
      type="number"
      name="buy_price"
      id="buy-price-field"
      value="<%= @book.buy_price() %>"
     />
    </td>
   </tr> 

   <tr>
     <td> 
      <label for="sell-price-field">Sell Price:</label>
      <input
       type="number"
       name="sell_price"
       id="sell-price-field"
       value="<%= @book.sell_price() %>"
      />
     </td>
   </tr> 
   
   <tr style="display:none">
    <td> 
     <label for="author-id-field">Author ID:</label>
     <input
      type="number"
      name="author_id"
      id="author-id-field"
      value="<%= @book.author_id %>"
      />
    </td>
   </tr> 
   
   <tr> 
    <td> 
    <input type='submit' value="Update Book">
    </td> 
   </tr>
 
 </table>

</form>